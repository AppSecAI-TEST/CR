<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/settings_gray"
    android:layout_width="match_parent"
    android:padding="@dimen/dp10">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:id="@+id/newreport_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/newreport"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                style="@style/textstyle_A"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/settings_gray"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/lay1"
                    android:layout_margin="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/ReportInfo"
                    style="@style/textstyle_A"/>
                    <ImageButton
                        android:id="@+id/InputReportInfo"
                        android:clickable="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_info_outline_black_24dp"
                        android:background="@drawable/rectangular_button"
                        android:layout_alignParentEnd="true"
                    />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_gray" />
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:id="@+id/lay5"
                    android:layout_margin="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/Activities"
                        style="@style/textstyle_A"/>
                    <ImageButton
                        android:clickable="false"
                        android:id="@+id/InputActivities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_playlist_add_black_24dp"
                        android:background="@drawable/rectangular_button"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_gray"/>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:id="@+id/lay6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/OptionD"
                        style="@style/textstyle_A"/>
                    <ImageButton
                        android:clickable="false"
                        android:id="@+id/InputManpower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_person_add_black_24dp"
                        android:background="@drawable/rectangular_button"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_gray"/>
                <RelativeLayout
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/lay7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/Equipment"
                        style="@style/textstyle_A"/>
                    <ImageButton
                        android:clickable="false"
                        android:id="@+id/InputEquipment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_build_black_24dp"
                        android:background="@drawable/rectangular_button"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_gray"/>
                <RelativeLayout
                    android:layout_margin="@dimen/dp10"
                    android:id="@+id/lay8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/Photos"
                        style="@style/textstyle_A"/>
                    <ImageButton
                        android:clickable="false"
                        android:id="@+id/InputPhotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_add_a_photo_black_24dp"
                        android:background="@drawable/rectangular_button"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/settings_gray"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabsave"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_save_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabpdf"
        app:backgroundTint="@color/colorSecondary"
        android:src="@drawable/ic_picture_as_pdf_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>